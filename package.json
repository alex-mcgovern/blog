{
    "name": "@alex-mcgovern/simple-blog-generator",
    "type": "module",
    "scripts": {
        "dev": "concurrently -n BUILD,SERVE -c \"bgBlue.bold,bgGreen.bold\" \"npm:build-watch\" \"npm:serve\"",
        "build": "rm -rf dist && tsx src/ts/build.ts",
        "build-watch": "nodemon --watch ./src --ext html,css,md,ts,png,jpeg,jpg --exec \"npm run build\"",
        "serve": "http-server ./dist -c-1 --silent --port 3000"
    },
    "devDependencies": {
        "@biomejs/biome": "1.7.3",
        "@types/node": "20.13.0",
        "@types/remark-prism": "^1.3.7",
        "concurrently": "8.2.2",
        "gray-matter": "4.0.3",
        "http-server": "14.1.1",
        "nodemon": "3.1.2",
        "prettier": "^3.2.5",
        "rehype-document": "7.0.3",
        "rehype-highlight": "^7.0.0",
        "rehype-parse": "9.0.0",
        "rehype-sanitize": "6.0.0",
        "rehype-stringify": "10.0.0",
        "rehype-wrap": "1.1.0",
        "remark-gfm": "4.0.0",
        "remark-parse": "11.0.0",
        "remark-prism": "^1.3.6",
        "remark-rehype": "11.1.0",
        "unified": "11.0.4",
        "yaml": "2.4.2",
        "zod": "3.23.8"
    }
}
