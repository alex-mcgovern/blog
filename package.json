{
  "name": "@alex-mcgovern/simple-blog-generator",
  "type": "module",
  "scripts": {
    "lint": "biome ci .",
    "knip": "knip",
    "format": "biome format --write .",
    "check": "npm run lint && npm run knip",
    "dev": "concurrently -n BUILD,SERVE -c \"bgBlue.bold,bgGreen.bold\" \"npm:build-watch\" \"npm:serve\"",
    "build": "rm -rf dist && tsx src/ts/build.ts",
    "build-watch": "nodemon --watch ./src --ext html,hbs,css,md,ts,png,jpeg,jpg --exec \"npm run build\"",
    "serve": "http-server ./dist -c-1 --silent --port 3000"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@types/node": "20.14.0",
    "concurrently": "8.2.2",
    "gray-matter": "4.0.3",
    "handlebars": "4.7.8",
    "http-server": "14.1.1",
    "knip": "5.17.4",
    "nodemon": "3.1.2",
    "rehype-pretty-code": "0.13.2",
    "rehype-stringify": "10.0.0",
    "remark-alerts": "0.0.1",
    "remark-gfm": "4.0.0",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.0",
    "shiki": "1.6.2",
    "tsx": "4.11.2",
    "unified": "11.0.4",
    "zod": "3.23.8"
  }
}
